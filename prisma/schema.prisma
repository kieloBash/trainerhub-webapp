model Sport {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  traineeProfile UserProfile[]
  trainerProfile TrainerProfile[]

  @@map("sports")
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model UserProfile {
  id            String            @id @default(auto()) @map("_id") @db.ObjectId
  fName         String
  lName         String
  contactNumber String
  gender        Gender
  location      String
  bio           String
  dob           DateTime
  rating        Int?              @default(0)
  feedbacks     Feedback[]
  favorites     FavoriteTrainer[]

  userId  String  @unique @db.ObjectId
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sport   Sport?  @relation(fields: [sportId], references: [id], onDelete: Cascade)
  sportId String? @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user-profile")
}

enum DayOfWeek {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

model TrainerProfile {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  fName         String
  lName         String
  contactNumber String
  gender        Gender
  location      String
  dob           DateTime

  bio         String
  careerPath  String
  highlights  String
  focus       String
  commission  Int
  rating      Int?              @default(0)
  feedbacks   Feedback[]
  favoritedBy FavoriteTrainer[]

  credentials   TrainerCredential?
  trainingPlans TrainingPlan[]
  workDays      DayOfWeek[]
  startTime     String?
  endTime       String?

  userId  String  @unique @db.ObjectId
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sport   Sport?  @relation(fields: [sportId], references: [id], onDelete: Cascade)
  sportId String? @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("trainer-profile")
}

model FavoriteTrainer {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  userId    String         @db.ObjectId
  trainerId String         @db.ObjectId
  user      UserProfile    @relation(fields: [userId], references: [id], onDelete: Cascade)
  trainer   TrainerProfile @relation(fields: [trainerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, trainerId]) // Ensures a user can favorite a trainer only once
  @@map("favorite-trainer")
}

model TrainerCredential {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  location     String
  dateObtained DateTime
  dateExpiry   DateTime

  profileId String         @unique @db.ObjectId
  profile   TrainerProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("trainer-credential")
}

model TrainingPlan {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  workoutType String
  description String
  excercises  String

  profileId String         @unique @db.ObjectId
  profile   TrainerProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("training-plans")
}

model Feedback {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  rating      Int?   @default(0)

  trainerProfileId String         @unique @db.ObjectId
  trainer          TrainerProfile @relation(fields: [trainerProfileId], references: [id], onDelete: Cascade)

  traineeProfileId String      @unique @db.ObjectId
  trainee          UserProfile @relation(fields: [traineeProfileId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("feedbacks")
}
